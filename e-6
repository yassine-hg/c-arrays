#include <stdio.h>

int main(){
    int t[100];
    int n;
    int ;

    printf("input the size: ");
    scanf("%d", &n);

    for(int i = 0;i < n; i++){
        printf("element - %d: ", i);
        scanf("%d" , &t[i]);
    }
    int max = t[0];
    int min = t[0];
    for(int i = 0; i <n ; i++){
           if(t[i] > max){
            max = t[i];
           }
           if(t[i] < min){
            min = t[i];
           }
        }
    printf("the max is: %d\n", max);
    printf("the min is: %d", min);
}
