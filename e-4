#include <stdio.h>

int main(){
    int t[100];
    int n;

    printf("input the number of elements to be stored in the array: ");
    scanf("%d", &n);

    for(int i = 0; i<n; i++){
        printf("element - %d: ", i);
        scanf("%d" , &t[i]);
    }
    printf("the element stored in the first array are: ");
    for(int i = 0 ; i < n; i++){
        printf("%d\t", t[i]);
    }
    printf("\n");

    printf("the element copied into the second array are: ");
    for(int i = 0 ; i < n; i++){
        printf("%d\t", t[i]);
    }

    return 0;
}
